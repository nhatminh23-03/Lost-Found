# Flask
FLASK_SECRET_KEY=change-me-to-a-random-string
FLASK_ENV=development
PORT=8080

# MongoDB Atlas
# Get this from Atlas → Connect → Drivers → copy connection string
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?appName=<AppName>
MONGODB_DB=lost_and_found

# Cloudflare R2
# Generate at: Cloudflare dashboard → R2 → Manage R2 API Tokens
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
# Format: https://<account-id>.r2.cloudflarestorage.com  (no bucket, no trailing slash)
R2_ENDPOINT_URL=https://<account-id>.r2.cloudflarestorage.com
R2_BUCKET_NAME=your-bucket-name
# Public domain assigned to your R2 bucket (enable public access in R2 dashboard)
R2_PUBLIC_BASE_URL=https://pub-<hash>.r2.dev
